// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  genre String?
  songs Song[]

  @@map("artists")
}

model Song {
  id       Int     @id @default(autoincrement())
  name     String
  duration Float?
  year     Int?
  artist   Artist? @relation(fields: [artistId], references: [id])
  artistId Int
  mixes    Mix[]

  @@map("songs")
}

model Mix {
  id     Int       @id @default(autoincrement())
  name   String
  date   String?
  length String?

  Song Song[]
  @@map("mixes")
}
