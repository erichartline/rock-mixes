generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String     @unique
  genres    Genre[]
  songs     Song[]
  playlists Playlist[]
  album     Album?     @relation(fields: [albumId], references: [id])
  albumId   Int?
}

model Song {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  duration  Int
  year      DateTime
  artists   Artist[]
  playlists Playlist[]
  album     Album?     @relation(fields: [albumId], references: [id])
  albumId   Int?
  // trackNumber Int
}

model Playlist {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  name       String   @unique
  date       DateTime
  duration   Int
  spotifyURL String
  notes      String
  songs      Song[]
  artists    Artist[]
  album      Album?   @relation(fields: [albumId], references: [id])
  albumId    Int?
}

model Genre {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String   @unique
  artist    Artist?  @relation(fields: [artistId], references: [id])
  artistId  Int?
}

model Album {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  artists   Artist[]
  songs     Song[]
  playlists Playlist[]
}
