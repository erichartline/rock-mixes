generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id    Int     @id @default(autoincrement())
  // createdAt DateTime @default(now())
  // updatedAt DateTime @updatedAt
  name  String  @unique
  genre String?
  songs Song[]
  mixes Mix[]

  @@map("artists")
}

model Song {
  id          Int     @id @default(autoincrement())
  // createdAt   DateTime @default(now())
  // updatedAt   DateTime @updatedAt
  name        String
  duration    Float?
  year        Int?
  artist      Artist? @relation(fields: [artistId], references: [id])
  artistId    Int
  mixes       Mix[]
  trackNumber Int

  @@map("songs")
}

model Mix {
  id     Int     @id @default(autoincrement())
  // createdAt DateTime @default(now())
  // updatedAt DateTime @updatedAt
  name   String  @unique
  date   String?
  length String?
  url    String?
  notes  String?

  songs   Song[]
  artists Artist[]

  @@map("mixes")
}
