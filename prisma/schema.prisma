generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String     @unique
  albumId   Int?
  album     Album?     @relation(fields: [albumId], references: [id])
  genres    Genre[]
  playlists Playlist[]
  songs     Song[]
}

model Song {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  name       String
  duration   String
  year       String
  spotifyURL String
  albumId    Int?
  album      Album?     @relation(fields: [albumId], references: [id])
  artists    Artist[]
  playlists  Playlist[]
}

model Playlist {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  name       String   @unique
  date       String
  duration   String
  spotifyURL String
  notes      String
  albumId    Int?
  album      Album?   @relation(fields: [albumId], references: [id])
  artists    Artist[]
  songs      Song[]
}

model Genre {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?  @unique
  artistId  Int?
  artist    Artist?  @relation(fields: [artistId], references: [id])
}

model Album {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  year      String
  artists   Artist[]
  playlists Playlist[]
  songs     Song[]
}
